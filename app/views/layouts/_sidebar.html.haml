      %li= link_to "Dashboard", dashboard_posts_path
      %li= link_to pluralize(Post.show_unpublished(true).count, 'post'),  posts_url
      %li= link_to pluralize(Image.count, 'image'), images_url
      %li= link_to pluralize(Asset.count, 'asset'), assets_url
