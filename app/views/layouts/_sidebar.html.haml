  - else
    - form_tag user_session_path do
      = text_field_tag 'user_session[email]'
      = password_field_tag 'user_session[password]'
      .clear
        %label{ :for => "user_session_remember_me" }
          remember me
        = check_box_tag 'use_session[remember_me]', '1', true
      %p.buttons
        = submit_tag 'Log in'
     
